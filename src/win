import { Graphics } from "pixi.js";
]

const debugBtn = new Graphics();
debugBtn.beginFill(0x00ff00);
debugBtn.drawRect(0, 0, 100, 40);
debugBtn.endFill();
debugBtn.interactive = true;
debugBtn.cursor = "pointer";
debugBtn.x = 50;
debugBtn.y = 50;
app.stage.addChild(debugBtn);

debugBtn.on("pointerdown", () => {
  const winningTexture = slotTextures[0];
  slotMachine.reels.forEach(reel => {
    reel.symbols[1].texture = winningTexture;
    const scale = Math.min(reel.symbolSize / winningTexture.width, reel.symbolSize / winningTexture.height);
    reel.symbols[1].scale.set(scale);
    reel.symbols[1].x = Math.round((reel.symbolSize - reel.symbols[1].width) / 2);
  });
  slotMachine.reelsComplete();
});